                                       @id="txt_jyoudata",
                                       @onkeypress = "return isNumberKey(event)",
                                       maxlength = 4,
                                       @size = "4",
                                       style = "margin:left:0px;width:50%;text-align:right;border:none;",
                                       oninput = "javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"

